
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_lot_form_inherit_oryx" model="ir.ui.view">
        <field name="name">stock.production.lot.form.oryx</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group string="Oryx Tracking">
                    <field name="qr_code_data"/>
                    <field name="barcode_value"/>
                    <field name="last_known_location_id"/>
                    <field name="status"/>
                    <field name="turnaround_days" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
